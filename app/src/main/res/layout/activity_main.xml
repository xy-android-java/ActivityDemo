<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_main_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="启动第一个activity"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_main_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="启动对话框"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_main_first" />

    <Button
        android:id="@+id/button_main_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="启动第二个activity"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_main_dialog" />


</androidx.constraintlayout.widget.ConstraintLayout>